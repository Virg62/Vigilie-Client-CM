<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.virgile62150.vigilie.clientcm" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Vigilie CM</name>
    <description>
        Vigilie Conseil Municipal est la partie Administrative de Vigilie (Approbation des Alertes / Utilisateurs)
    </description>
    <author email="virgile.d62150@gmail.com" href="https://virgile62150.codes">
        Virgile62150
    </author>
    <icon src="images/logo_transparent.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="21" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
